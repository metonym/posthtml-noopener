{
  "name": "posthtml-noopener",
  "version": "1.0.1",
  "license": "MIT",
  "description": "PostHTML plugin to add 'rel=\"noopener noreferrer\"' to links that open in a new tab",
  "author": "Eric Liu (https://github.com/metonym)",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "develop": "tsc -w",
    "build": "rm -rf lib && tsc -p tsconfig.prod.json",
    "test": "jest --coverage",
    "test:tdd": "jest --watch",
    "lint": "tslint --fix -p . -c tslint.json",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "posthtml": "^0.11.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^24.0.15",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/posthtml-noopener.git"
  },
  "homepage": "https://github.com/metonym/posthtml-noopener",
  "keywords": [
    "html",
    "posthtml",
    "posthtml-plugin",
    "noopener",
    "noreferrer"
  ],
  "files": [
    "lib/"
  ],
  "bugs": "https://github.com/metonym/posthtml-noopener/issues"
}
